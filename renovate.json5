{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>lkmgr/homelab//.renovate/allowedVersions.json5",
    // "github>lkmgr/homelab//.renovate/autoMerge.json5",
    "github>lkmgr/homelab//.renovate/customManagers.json5",
    "github>lkmgr/homelab//.renovate/groups.json5",
    "github>lkmgr/homelab//.renovate/labels.json5",
    "github>lkmgr/homelab//.renovate/semanticCommits.json5",
    ":configMigration",
    ":automergeBranch",
    ":disableRateLimiting",
    ":semanticCommits",
    ":timezone(Europe/Berlin)"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "flux": {
    "fileMatch": [
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml$"
    ],
    "pinDigests": true
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml$"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "(^|/)kustomization\\.ya?ml(\\.j2)?$"
    ]
  },
  "npm": {
    "rangeStrategy": "pin"
  },
  "packageRules": [
    // custom versioning
    {
      "description": "Use custom versioning for Minio",
      "matchDatasources": ["docker"],
      "versioning": "regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)T.*Z$",
      "matchPackagePatterns": ["minio"]
    },
    {
      "description": "Use custom versioning for k3s",
      "matchDatasources": ["github-releases"],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>\\+k3s)(?<build>\\d+)$",
      "matchPackagePatterns": ["k3s"]
    },
  ]
}
